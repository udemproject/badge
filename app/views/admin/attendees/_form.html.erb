<% if @attendees.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@attendees.errors.count, "error") %> prohibited this article from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @attendees.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


<%= form_for [:admin, @attendees], html: { class: "form-horizontal article" } do |f| %>

    <div class="form-group">
      <%= f.label :user_id, class: 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :user_id, User.all, :id, :name, {}, class: 'form-control' %>
      </div>
      </div>

      <div class="form-group">
        <%= f.label :event_id, class: 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= f.collection_select :event_id, Event.all, :id, :name, {}, class: 'form-control' %>
        </div>
        </div>

      <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, class: 'button' %>
            <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                      admin_attendees_path, class: 'button' %>
          </div>
        </div>

  <%end%>
