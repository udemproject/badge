<% if @location.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@location.errors.count, "error") %> prohibited this article from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<%= form_for [:admin, @location], html: { class: "form-horizontal article" } do |f| %>

    <div class="form-group">
      <%= f.label "NAME", class: 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      </div>

      <div class="form-group">
        <%= f.label :gmaps_url, class: 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= f.text_field :gmaps_url, class: 'form-control' %>
        </div>
        </div>

        <div class="form-group">
          <%= f.label :address, class: 'control-label col-lg-2' %>
          <div class="col-lg-10">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
          </div>
        <div class="row mb-4">
          <div class="col-sm-4 offset-sm-1">
            <%= f.submit nil, class:"btn btn-primary btn-block" %>
          </div>
          <div class="col-sm-4 offset-sm-1">
            <div class="actions"><%= link_to "Back", admin_locations_path, class:"btn btn-secondary btn-block" %></div>
          </div>
        </div>

  <%end%>
