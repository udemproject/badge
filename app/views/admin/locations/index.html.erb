<div class="col-10">
  <h1 class="hbigger">Location</h1>
</div>
<div class="container">
  <div class = 'row'>
    <div class="col-sm-4 offset-sm-1">
      <a><%= link_to "New Location", new_admin_location_path, class: "btn btn-primary btn-block"%></a>
    </div>
    <table class='table'>
      <thead>
        <tr>
          <th width="150"> ID</th>
          <th width="150"> Name</th>
          <th width="150"> Edit</th>
          <th width="150"> Destroy</th>
        </tr>
      </thead>

      <% @locations.each do |location|%>
      <tbody>
        <tr>
          <td><%= location.id%></td>
          <td><%= location.name%></td>
          <td><%= link_to "Edit", edit_admin_location_path(id: location.id), class: "category" %></td>
          <td><%= link_to 'Delete',{ action: :destroy, id: location.id }, method: :delete , data: { confirm: 'Are you sure?' }, class: "category" %></td>
        </tr>
      </tbody>
      <%end%>
    </table>
  </div>
</div>
