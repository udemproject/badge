<div class="card container_edit">
  <% content_for :title, "Perfil #{@user.name}" %>
  <div class="avatar">
    <span class="plus">+</span>
  </div>
  <div class="card-block">
    <%= form_for([:admin, @user], url: {controller: "users",action: "updateProfile"})  do |f| %>
      <div class="form-group row">
          <%unless @user.errors[:name].empty?%>
            name <%=@user.errors[:name][0]%>
          <script type="text/javascript">

          </script>
          <%end%>
        <%= f.label :name, 'Nombre', class: 'col-sm-2 form-control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class:'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%unless @user.errors[:email].empty?%>
          Email <%=@user.errors[:email][0]%>
        <script type="text/javascript">

        </script>
        <%end%>
        <%= f.label :email, 'Email', class: 'col-sm-2 form-control-label' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class:'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <%unless @user.errors[:profile_id].empty?%>
        <div class="form-group" align="center">
          <p class="red">Location <%=@user.errors[:profile_id][0]%></p>
        </div>
        <script type="text/javascript">

        </script>
        <%end%>
        <%= f.label :profile_id, class: 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.collection_select :profile_id, Profile.all, :id, :name, {}, class: 'form-control' %>
        </div>

        </div>

      <div class="row">
        <div class="col-sm-4 offset-sm-1">
          <%= f.submit nil, class:"btn btn-primary btn-block" %>
        </div>
        <div class="col-sm-4 offset-sm-1">
          <div class="actions"><%= link_to "Back", admin_users_path, class:"btn btn-secondary btn-block" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
