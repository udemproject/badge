<div class="avatar">
  <span class="plus">+</span>
</div>
<div class="card-block m-4">

  <%= form_for [:admin, @user] do |f| %>
    <div class="form-group row">
        <%unless @user.errors[:name].empty?%>
          name <%=@user.errors[:name][0]%>
        <script type="text/javascript">

        </script>
        <%end%>
      <%= f.label :name, 'Nombre', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%unless @user.errors[:email].empty?%>
        Email <%=@user.errors[:email][0]%>
      <script type="text/javascript">

      </script>
      <%end%>
      <%= f.label :email, 'Email', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class:'form-control'%>
      </div>
    </div>
    <div class="form-group row">
      <%unless @user.errors[:password].empty?%>
        Password <%=@user.errors[:password][0]%>
      <script type="text/javascript">

      </script>
      <%end%>
      <%= f.label :password, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%unless @user.errors[:shirt_size].empty?%>
        Shirt_size <%=@user.errors[:shirt_size][0]%>
      <script type="text/javascript">

      </script>
      <%end%>
      <%= f.label :shirt_size, 'Playera', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.select(:shirt_size, User.shirt_sizes.keys.map {|shirt| [shirt.upcase, shirt]}, {}, class: 'c-select form-control') %>
      </div>
    </div>

      </div>
    <div class="row mb-4">
      <div class="col-sm-4 offset-sm-1">
        <%= f.submit nil, class:"btn btn-primary btn-block" %>
      </div>
      <div class="col-sm-4 offset-sm-1">
        <div class="actions"><%= link_to "Back", admin_events_path, class:"btn btn-secondary btn-block" %></div>
      </div>
    </div>
  <% end %>
</div>
