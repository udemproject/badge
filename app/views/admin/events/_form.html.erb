<%= form_for [:admin, @event], html: { class: "form-horizontal article" } do |f| %>

<% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this article from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%unless @event.errors[:location_id].empty?%>
    <div class="form-group" align="center">
      <p class="red">Location <%=@event.errors[:location_id][0]%></p>
    </div>
    <script type="text/javascript">

    </script>
    <%end%>
    <%= f.label :location_id, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.collection_select :location_id, Location.all, :id, :name, {}, class: 'form-control' %>
    </div>

    </div>

    <div class="form-group">
      <%unless @event.errors[:name].empty?%>
      <div class="form-group">
      <p class="red">Name <%=@event.errors[:name][0]%></p>
      </div>
      <script type="text/javascript">

      </script>
      <%end%>
      <%= f.label "name", class: 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      </div>

      <div class="form-group">
        <%unless @event.errors[:starts_at].empty?%>
        <p class="red"><%=@event.errors[:starts_at][0]%></p>
        <%end%>
        <%= f.label "Start date", class: 'control-label col-lg-2' %>
        <div class="col-lg-10">
            <%= f.date_field :starts_at%>
        </div>
        </div>

        <div class="form-group">
          <%= f.label "finished date", class: 'control-label col-lg-2' %>
          <div class="col-lg-10">
              <%= f.date_field :finishes_at %>
          </div>
          </div>

          <div class="form-group">
            <%= f.label "Event image", class: 'control-label col-lg-2' %>
            <div class="col-lg-10">
              <%= f.attachment_field :image %>
            </div>
            </div>

      <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, class: 'button' %>
            <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                      admin_events_path, class: 'button' %>
          </div>
        </div>

  <%end%>
