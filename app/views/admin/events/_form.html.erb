<%= form_for [:admin, @event], html: { class: "form-horizontal article" } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this article from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :location_id, class: 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.collection_select :location_id, Location.all, :id, :name, {}, class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label "card last digits", class: 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :event, class: 'form-control' %>
      </div>
      </div>

      <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, class: 'button' %>
            <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                      payments_path, class: 'button' %>
          </div>
        </div>

  <%end%>
