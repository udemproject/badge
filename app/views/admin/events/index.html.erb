<div class="row">
  <div class="col-2 left">
    <ul>
      <a><%= link_to "Event", admin_events_path, class: "nav-link2 active"%></a>
      <a><%= link_to "Locations", admin_locations_path, class: "nav-link2"%></a>
      <a><%= link_to "Attendes", admin_attendees_path, class: "nav-link2"%></a>
      <a><%= link_to "Profiles", admin_profiles_path, class: "nav-link2"%></a>
      <a><%= link_to "Teams", admin_teams_path, class: "nav-link2"%></a>
      <a><%= link_to "Users", admin_users_path, class: "nav-link2"%></a>
      <a><%= link_to "Badge", admin_badges_path, class: "nav-link2"%></a>
      <a><%= link_to "Notification", admin_notifications_path, class: "nav-link2"%></a>
    </ul>
</div>
<div class="col-10">
  <h1 class="hbigger">Events</h1>
</div>
<div class="container">
  <div class = 'row'>
    <div class="col-sm-4 offset-sm-1">
      <a><%= link_to "New Event", new_admin_event_path, class: "btn btn-primary btn-block"%></a>
    </div>
    <table class='table'>
      <thead>
        <tr>
          <th width="150"> Picture</th>
          <th width="150"> <%= link_to "Name", admin_events_path(order:"name"), class: "category" %></th>
          <th width="150"> Date </th>
          <th width="150"> Edit</th>
          <th width="150"> Destroy</th>
        </tr>
      </thead>

      <% @events.each do |event|%>
      <tbody>
        <tr>
          <td><%= image_tag attachment_url(event, :image), size:"200" unless event.image.blank?%></td>
          <td><%= event.name%></td>
          <td><%= event.starts_at.strftime("%m/%d/%Y")%>-to-<%= event.finishes_at.strftime("%m/%d/%Y")%> </td>
          <td><%= link_to "Edit", edit_admin_event_path(slug: event.slug), class: "category" %></td>
          <td><%= link_to 'Delete',{ action: :destroy, slug: event.slug }, method: :delete , data: { confirm: 'Are you sure?' }, class: "category" %></td>
        </tr>
      </tbody>
      <%end%>
    </table>
  </div>
</div>
