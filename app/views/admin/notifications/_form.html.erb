<%= form_for [:admin, @notification], html: { class: "form-horizontal article" } do |f| %>


      <div class="col-sm-10">

        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Events
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <% @events.each do |event|%>
              <li><a><%= link_to event.name, new_admin_notification_path(event_id: event.id), class: "category" %></a></li>
            <%end%>
          </ul>
        </div>
      </div>
        <%unless @show_event.blank?%>
        <%= f.label :event, @show_event.name, class: 'col-12 form-control-label' %>
        <%end%>
      <%= f.label :message_sent, 'Message', class: 'col-2 form-control-label' %>
      <div class="col-10">
        <%= f.select(:message_sent, Notification.message_sents.keys.map {|message_sent| [message_sent.upcase, message_sent]}, {}, class: 'c-select form-control') %>
      </div>

      <div class="form-group">
        <%= f.label :badge_id %>
        <div class="col-lg-10">
            <%= f.collection_select :badge_id, @badges, :id, :names, class: 'form-control' %>
        </div>
      </div>

    <div class="container">
      <%unless @team.blank? %>
      <%= f.label :team_id, 'Select a group', class: 'col-2 form-control-label' %>
      <div class="col-10">
        <%=  f.collection_select :team_id, @team, :id, :name, {}, class: 'form-control' %>
      </div>
    <%end%>
    </div>

    <div class="container">
      <%= f.label :all, 'Select all the badges', class: 'col-2 form-control-label' %>
      <div class="form-check">
        <%= f.check_box :all  unless @show_event.blank?%>
      </div>
    </div>
      <%f.event_id = @show_event unless @show_event.blank?%>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= f.submit nil, class: 'button' %>
          <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    admin_notifications_path, class: 'button' %>
        </div>
      </div>

  <%end%>
