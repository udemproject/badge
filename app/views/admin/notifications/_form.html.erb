<% if @notification.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pluralize(@notification.errors.count, "error") %> prohibited this article from being saved:</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @notification.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>


<%= form_for [:admin, @notification], html: { class: "form-horizontal article" } do |f| %>

    <div class="form-group row">
      <%unless @notification.errors[:weekday].empty?%>
        week day <%=@notification.errors[:weekday][0]%>
      <script type="text/javascript">

      </script>
      <%end%>
      <%= f.label :weekday, 'weekday', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.select(:weekday, Notification.weekdays.keys.map {|weekday| [weekday.upcase, weekday]}, {}, class: 'c-select form-control') %>
      </div>
    </div>

    <div class="form-group row">
      <%unless @notification.errors[:message_sent].empty?%>
        Shirt_size <%=@notification.errors[:message_sent][0]%>
      <script type="text/javascript">

      </script>
      <%end%>
      <%= f.label :message_sent, 'Playera', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.select(:message_sent, Notification.message_sents.keys.map {|message_sent| [message_sent.upcase, message_sent]}, {}, class: 'c-select form-control') %>
      </div>
    </div>

      <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit nil, class: 'button' %>
            <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                      admin_notifications_path, class: 'button' %>
          </div>
        </div>

  <%end%>
