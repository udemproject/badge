<% content_for :title, 'Registro Proceso de Innovación' %>
<h2 class="title">¡Bienvenido al draft!</h2>
<div class="card card-block card-form">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <%= button_to 'Ingresa con Facebook', '/auth/facebook/', class:"btn btn-primary btn-block btn-login btn-facebook" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <%= button_to 'Ingresa con Google', '/auth/google_oauth2', class:"btn btn-primary" %>
    </div>
  </div>
</div>
<div class="card card-block card-form">
  <div class="row">
    <div class="col-sm-12 text-sm-center">
      <p>¿Ya tienes cuenta? <%= link_to "Haz login", login_path %>.</p>
      <p style="margin: 0">¿No tienes cuenta? <%= link_to "Registrate", new_identity_path %>.</p>
    </div>
  </div>
</div>
