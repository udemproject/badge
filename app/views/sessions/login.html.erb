<% content_for :title, 'Inicia sessión' %>
<div class="card card-block card-form">
   <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group row">
      <%= f.label :email, 'Email', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-9 offset-sm-1">
        <%= f.email_field :email, class:'form-control', placeholder:'usuario@email.com' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, 'Contraseña', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-9 offset-sm-1">
        <%= f.password_field :password, class:'form-control', placeholder:'Mínimo 6 cararacteres' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-1">
        <div class="actions"><%= submit_tag "Login", class:"btn btn-success btn-block" %></div>
      </div>
    </div>
    <%end%>
</div>
