<div class="row">
  <div class="col-sm-12">
    <h2 id="choose_problem" class="title">Elige un problema</h2>

    <div class="teams teams--center">
      <% @teams.each do |team| %>
        <div class="card team-list" id="team-<%= team.id %>">
          <h4 class="team-problem"><%= team.name %></h4>

          <ul class="team-members">
            <% team.attendees.each do |attendee| %>
              <li class="team-member">
                <figure class="img-circle img-fluid">
                  <%= image_tag(attendee.user.picture_url) %>
                </figure>
                <p class="team-member-name"><%= attendee.user.name %></p>
              </li>
            <% end %>
            <li class="lteam-member">
              <%= link_to "<i class='draft-check'></i>".html_safe,
              event_pick_team_path(current_event, team),
              method: :post, data: { confirm: "¿Estás seguro que eliges al equipo #{team.name}?" },
              class: 'btn btn-primary btn-sm invitation-btn' %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
