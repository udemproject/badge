<div class="avatar">
  <h2 class="card-title">Confirma tus datos</h2>
  <img class="card-img-top img-fluid uploadable-image" src="<%= @user.picture_url %>" alt="Profile Picture">
  <span class="plus">+</span>
</div>
<div class="card-block">

  <%= form_for @user do |f| %>
    <%= f.attachment_field :avatar, class: 'hidden' %>
    <div class="form-group row">
      <%= f.label :name, 'Nombre', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, 'Email', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class:'form-control'%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :shirt_size, 'Playera', class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.select(:shirt_size, User.shirt_sizes.keys.map {|shirt| [shirt.upcase, shirt]}, {}, class: 'c-select form-control') %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-1">
        <%= f.submit submit_button_text, class:"btn btn-success btn-block" %>
      </div>
    </div>
  <% end %>
</div>
